{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "isolatedModules": false,
    "target": "ES2017",
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app",
    "components",
    "lib",
    "tests",
    ".next",
    "dist"
  ]
} 