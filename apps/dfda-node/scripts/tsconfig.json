{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist/scripts",
    "noEmit": false,
    "isolatedModules": false,
    "target": "ES2017",
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app",
    "components",
    "tests",
    ".next",
    "dist"
  ]
} 